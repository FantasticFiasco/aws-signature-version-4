{
  "extends": [
    "github>FantasticFiasco/renovate-config"
  ],
  "packageRules": [
    {
      "groupName": "AWS CDK (JS)",
      "extends": [
        "schedule:earlyMondays"
      ],
      "matchPackageNames": [
        "/^aws-cdk-lib/"
      ]
    },
    {
      "groupName": "AWS SDK (.NET)",
      "extends": [
        "schedule:earlyMondays"
      ],
      "matchPackageNames": [
        "/^AWSSDK./"
      ]
    },
    {
      "groupName": "AWS Constructs (JS)",
      "extends": [
        "schedule:earlyMondays"
      ],
      "matchPackageNames": [
        "/^constructs/"
      ]
    },
    {
      "groupName": "ESLint packages (JS)",
      "matchPackageNames": [
        "/eslint/"
      ]
    }
  ],
  "ignoreDeps": [
    "bl",
    "lodash",
    "minimist",
    "netmask"
  ]
}
