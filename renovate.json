{
  "extends": [
    "github>FantasticFiasco/renovate-config"
  ],
  "packageRules": [
    {
      "groupName": "AWS CDK (JS)",
      "matchPackageNames": ["/^aws-cdk-lib/"],
      "schedule": ["* * * * 0"]
    },
    {
      "groupName": "AWS SDK (.NET)",
      "matchPackageNames": ["/^AWSSDK./"],
      "schedule": ["* * * * 0"]
    },
    {
      "groupName": "AWS Constructs (JS)",
      "matchPackageNames": ["/^constructs/"],
      "schedule": ["* * * * 0"]
    },
    {
      "groupName": "ESLint packages (JS)",
      "matchPackageNames": ["/eslint/"],
      "schedule": ["* * * * 0"]
    }
  ]
}
